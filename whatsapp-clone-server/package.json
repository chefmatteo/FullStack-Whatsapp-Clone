{
  "name": "whatsapp-clone-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "nodemon --exec ts-node index.ts",
    "build": "tsc",
    "serve": "node index.js",
    "format": "prettier --write \"*.{ts,js,json,md}\"",
    "test": "jest"
  },
  "jest-junit": {
    "outputdirectory": "./test-results"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.3",
    "@types/graphql": "14.5.0",
    "@types/jest": "^30.0.0",
    "@types/node": "24.5.1",
    "apollo-server-testing": "2.25.3",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.25",
    "apollo-server-express": "3.13.0",
    "apollo-server-core": "3.13.0",
    "apollo-server": "3.13.0",
    "cors": "2.8.5",
    "express": "^4.18.2",
    "graphql": "16.11.0",
    "graphql-import": "1.0.2",
    "graphql-scalars": "1.24.2",
    "graphql-tools": "9.0.20"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globalSetup": "<rootDir>/tests/global-setup.ts",
    "reporters": [
      "default"
    ]
  }
}
